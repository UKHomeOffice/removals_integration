.topper
    span.caption Total
    if centre.capacity_female
        span.value.female Female #{centre.capacity_female}
    span.value Male #{centre.capacity}


h2 #{centre.name}
ul.availability
    li.available Available
        if centre.current_beds_female !== null
            span.female Female &nbsp;
                b.num #{centre.current_beds_female}
            span.male Male &nbsp;
                b.num #{centre.current_beds_male}
        else
            span.male &nbsp; #{centre.current_beds_male}

    li.unavailable Unavailable
        span.ooc 
            b.num #{centre.current_beds_ooc}

//
    table.inout
        tr
            td Inbound
            td Outbound
        tr
            td xx
            td yy

    ul.availability
        li Reserved
            span zz
- updatedAt = new Date(centre.updatedAt)
include tailer.jade

