{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "date": {
      "type": "date-time",
      "format": "date"
    },
    "time": {
      "type": "date-time",
      "format": "time"
    },
    "centre": {
      "type": "regex",
      "pattern": "^[a-z].*$"
    },
    "operation": {
      "enum": [
        "ooc",
        "bic",
        "in",
        "out",
        "tra"
      ]
    },
    "cid_id": {
      "type": "integer"
    },
    "gender": {
      "type": "string",
      "enum": [
        "na",
        "m",
        "f"
      ]
    },
    "nationality": {
      "type": "regex",
      "pattern": "^(na)|([a-z]{3})$"
    },
    "bed_counts": {
      "type": "object",
      "properties": {
        "male": {
          "type": "integer"
        },
        "female": {
          "type": "integer"
        },
        "out_of_commission": {
          "type": "object",
          "properties": {
            "ooc_male": {
              "type": "integer"
            },
            "ooc_female": {
              "type": "integer"
            },
            "details": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "ref": {
                    "type": "string"
                  },
                  "reason": {
                    "type": "string"
                  },
                  "gender": {
                    "type": "string",
                    "enum": [
                      "na",
                      "m",
                      "f"
                    ]
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "required": [
    "date",
    "time",
    "centre",
    "operation",
    "gender",
    "nationality",
    "bed_counts"
  ]
}