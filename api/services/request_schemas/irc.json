{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "version": "0.3",
  "type": "object",
  "properties": {
    "trans_id": {
      "description": "Auto incremented number to identify flow of API call",
      "type": "integer",
      "minimum": 0
    },
    "date": {
      "description": "Date when API invoked",
      "type": "date-time",
      "format": "date"
    },
    "time": {
      "description": "Time when API invoked",
      "type": "date-time",
      "format": "time"
    },
    "centre": {
      "description": "Name of centre",
      "type": "string",
      "pattern": "^[a-z].*$",
      "minLength": 3,
      "maxLength": 50
    },
    "centre_to": {
      "description": "Name of centre - Apply for inter centre move ONLY",
      "type": "regex",
      "pattern": "^(na)|([a-z])$",
      "minLength": 2,
      "maxLength": 50
    },
    "operation": {
      "description": "Name of operation API invoked for",
      "type": "string",
      "minLength": 2,
      "maxLength": 3,
      "enum": [
        "ooc",
        "bic",
        "in",
        "out",
        "tra"
      ]
    },
    "cid_id": {
      "description": "Person identification number",
      "type": "integer",
      "minLength": 6
    },
    "gender": {
      "description": "Person gender",
      "type": "string",
      "minLength": 1,
      "maxLength": 2,
      "enum": [
        "na",
        "m",
        "f"
      ]
    },
    "nationality": {
      "description": "Person nationality. XXX when nationality is not known",
      "type": "regex",
      "pattern": "^(na)|([a-z]{3})$",
      "minLength": 2,
      "maxLength": 3
    },
    "bed_counts": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "male": {
          "description": "Number of male beds occupied",
          "type": "integer",
          "minimum": 0
        },
        "female": {
          "description": "Number of female beds occupied",
          "type": "integer",
          "minimum": 0
        },
        "out_of_commission": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "ooc_male": {
              "description": "Number of male out of commission beds",
              "type": "integer",
              "minimum": 0
            },
            "ooc_female": {
              "description": "Number of female out of commission beds",
              "type": "integer",
              "minimum": 0
            },
            "details": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "ref": {
                    "type": "string",
                    "pattern": "^[a-z].*$",
                    "minLength": 0,
                    "maxLength": 10
                  },
                  "reason": {
                    "type": "string",
                    "pattern": "^[a-z].*$",
                    "minLength": 0,
                    "maxLength": 75
                  },
                  "gender": {
                    "type": "string",
                    "minLength": 1,
                    "maxLength": 2,
                    "enum": [
                      "na",
                      "m",
                      "f"
                    ]
                  }
                },
                "required": [
                  "ref",
                  "reason"
                ]
              }
            }
          },
          "required": [
            "ooc_male",
            "ooc_female"
          ]
        }
      }
    },
    "required": [
      "male",
      "female",
      "out_of_commission"
    ]
  },
  "additionalProperties": false,
  "required": [
    "date",
    "time",
    "centre",
    "trans_id",
    "operation",
    "gender",
    "nationality",
    "bed_counts",
    "centre_to"
  ]
}
