{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "version": "0.3",
  "type": "object",
  "properties": {
    "trans_id": {
      "description": "Auto incremented number to identify flow of API call",
      "type": "integer",
      "minimum": 0,
      "multipleOf": 1
    },
    "date": {
      "description": "Date when API invoked",
      "type": "date-time",
      "format": "date"
    },
    "time": {
      "description": "Time when API invoked",
      "type": "date-time",
      "format": "time"
    },
    "centre": {
      "description": "Name of centre",
      "type": "string",
      "pattern": "^[a-z].*$",
      "minLength": 3,
      "maxLength": 50
    },
    "centre_to": {
      "description": "Name of centre - Apply for inter centre move ONLY",
      "type": "string",
      "pattern": "^(na)|([a-z])$",
      "minLength": 2,
      "maxLength": 50
    },
    "operation": {
      "description": "Name of operation API invoked for",
      "type": "string",
      "minLength": 2,
      "maxLength": 3,
      "enum": [
        "in",
        "out",
        "tra"
      ]
    },
    "cid_id": {
      "description": "Person identification number",
      "type": "integer",
      "minLength": 6,
      "multipleOf": 1
    },
    "gender": {
      "description": "Person gender",
      "type": "string",
      "minLength": 1,
      "maxLength": 2,
      "enum": [
        "na",
        "m",
        "f"
      ]
    },
    "nationality": {
      "description": "Person nationality. XXX when nationality is not known",
      "type": "string",
      "pattern": "^(na)|([a-z])$",
      "minLength": 2,
      "maxLength": 3
    }
  },
  "additionalProperties": false,
  "required": [
    "date",
    "time",
    "centre",
    "trans_id",
    "operation",
    "gender",
    "nationality",
    "centre_to"
  ]
}
