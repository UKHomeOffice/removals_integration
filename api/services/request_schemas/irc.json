{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "version": "0.3",
  "type": "object",
  "properties": {
    "trans_id": {
      "description": "Auto incremented number to identify flow of API call",
      "type": "integer",
      "minimum": 0
    },
    "date": {
      "description": "Date when API invoked",
      "type": "string",
      "format": "date-time"
    },
    "centre": {
      "description": "Name of centre",
      "type": "string",
      "pattern": "^(na)|([A-Za-z0-9- ]{2,50})$",
      "minLength": 3,
      "maxLength": 50
    },
    "centre_to": {
      "description": "Name of centre - Apply for inter centre move ONLY",
      "type": "string",
      "pattern": "^(na)|([A-Za-z0-9- ]{2,50})$",
      "minLength": 2,
      "maxLength": 50
    },
    "operation": {
      "description": "Name of operation API invoked for",
      "type": "string",
      "minLength": 2,
      "maxLength": 3,
      "enum": [
        "ooc",
        "bic",
        "in",
        "out",
        "tra"
      ]
    },
    "cid_id": {
      "description": "Person identification number",
      "type": "integer",
      "minLength": 6,
      "minimum": 0
    },
    "gender": {
      "description": "Person gender",
      "type": "string",
      "minLength": 1,
      "maxLength": 2,
      "enum": [
        "na",
        "m",
        "f"
      ]
    },
    "nationality": {
      "description": "Person nationality. XXX when nationality is not known",
      "type": "string",
      "pattern": "^((na)|([a-z]){2,3})$",
      "minLength": 2,
      "maxLength": 3
    },
    "bed_counts": {
      "additionalProperties": false,
      "properties": {
        "male": {
          "description": "Number of male beds occupied",
          "type": "integer",
          "minimum": 0,
          "maximum": 10000
        },
        "female": {
          "description": "Number of female beds occupied",
          "type": "integer",
          "minimum": 0
        },
        "out_of_commission": {
          "additionalProperties": false,
          "properties": {
            "ooc_male": {
              "description": "Number of male out of commission beds",
              "type": "integer",
              "minimum": 0,
              "maximum": 10000
            },
            "ooc_female": {
              "description": "Number of female out of commission beds",
              "type": "integer",
              "minimum": 0,
              "maximum": 10000
            },
            "details": {
              "type": "array",
              "minItems": 1,
              "maxItems": 100,
              "uniqueItems": true,
              "items": {
                "additionalProperties": false,
                "properties": {
                  "ref": {
                    "type": "string",
                    "pattern": "^([A-Za-z0-9- ]{0,10})$",
                    "minLength": 0,
                    "maxLength": 10
                  },
                  "reason": {
                    "type": "string",
                    "pattern": "^([A-Za-z0-9- ]{0,75})$",
                    "minLength": 0,
                    "maxLength": 75
                  },
                  "gender": {
                    "type": "string",
                    "minLength": 1,
                    "maxLength": 2,
                    "enum": [
                      "na",
                      "m",
                      "f"
                    ]
                  }
                },
                "required": [
                  "ref",
                  "reason",
                  "gender"
                ]
              }
            }
          },
          "required": [
            "ooc_male",
            "ooc_female",
            "details"
          ]
        }
      }
    },
    "required": [
      "male",
      "female",
      "out_of_commission"
    ]
  },
  "additionalProperties": false,
  "required": [
    "date",
    "centre",
    "trans_id",
    "operation",
    "gender",
    "nationality",
    "bed_counts",
    "centre_to"
  ]
}
